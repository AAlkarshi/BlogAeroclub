{% extends 'base.html.twig' %}

{% block title %}Affichage d'un Post{% endblock %}

{% block body %}
    <h1>{{ postDetails.title }}</h1>

    <!-- Pseudo et date de création et catégorie -->
    <p>Créé par <strong>{{ postDetails.username }}</strong> le {{ postDetails.creationDate|date('d/m/Y') }} | {{ postDetails.name }}</p>

    <!-- Image facultative -->
    {% if postDetails.image %}
        <p>
            <img src="{{ asset('uploads/images/' ~ postDetails.image) }}" style="max-width: 100%; height: auto;">
        </p>
    {% endif %}

    <hr>

    <!-- Contenu principal du post -->
    <div>
        <h2>Contenu du Post</h2>
        <p><strong>{{ postDetails.username }}</strong> : {{ postDetails.content }}</p>
    </div>

    <!-- Réponses au post -->
    <div>
        {% for response in postDetails.responses %}
            <p><strong>{{ response.username }}</strong>: {{ response.content }}</p>
        {% endfor %}
    </div>

    <!-- Formulaire de réponse -->
    {% if app.user %}
        <div>
            <h2>Répondre au Post</h2>
            <form method="post" action="{{ path('app_repondre_au_post', { 'id': postDetails.id }) }}">
                <textarea name="response" rows="4" cols="50"></textarea><br>
                <button type="submit">Envoyer</button>
            </form>
        </div>
    {% endif %}
{% endblock %}
