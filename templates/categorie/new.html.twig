        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'style': 'width: 50%; padding: 10px; font-size: 18px; margin: auto;'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <button class="btn btn-primary" style="font-size: 20px; margin-top: 15px; display: block; margin: auto;">Ajouter</button>
{{ form_end(form) }}

